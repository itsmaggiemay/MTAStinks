<form action="/posts" method="POST">

<!-- Comment Box -->
<label for="comment">What does the MTA suck at today?<br>
	<textarea type="text" name="post[comment]"></textarea>
</label><br>

<!-- user drop down -->

<label for="user">User<br>
	<select name="post[user_id]">
		<% @users.each do |user| %>
		<option value="<%= user.id %>"><%= user.name %></option>
		<% end %>
	</select>
</label><br>


<a href='/users/new'>or Create a new user</a><br>


<!-- user drop down -->

	<label for="tags">
						<span>Tag Your Photo:</span><br>
	    				<% @tags.each do |tag| %>
								<input type="checkbox" name="tags[]" value="<%= tag.id %>"><%= tag.name %><br>
					<% end %>
		</label>

<input type="submit">	
</form>


